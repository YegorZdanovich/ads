<%= f.label "Status" , :class => "control-label"%>
  <div class="controls">

    <% if for_show %>
      <%= f.label :role, "#{@profile.user.role}", :class => "checkbox inline"%>
      <%= f.check_box @profile.user.role, checked: "checked", disabled: "true"%>
    <% else %>

      <% if can? :update, @profile %>
        <%= select( User, :role, User.role.options( except: [:guest]))%>
      <% end %>
    
    <% end %>
  </div>
<br>