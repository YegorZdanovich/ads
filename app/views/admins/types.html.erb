<%= form_for Type.new  , html: {:class => "form-horizontal"} do |f| %>
  
  <div class="control-group">
    
    <%= f.label "Type Name " , :class => "control-label"%>
    <div class="controls">
      <%= f.text_field :value %>
    </div>
    <br/>
    
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to "Home", root_path, :class => "btn" %>
    </div>

    <%= f.label "All types " , :class => "control-label"%>
    <div class="controls">
      <%= f.select :value, Type.all.map(&:value) %>
    </div>
    <br/>


  <div>

<% end %>
